@model CedroBackend.Models.Restaurante

@{
    ViewBag.Title = "Apagar Restaurante";
}

<h2>Apagar Restaurante</h2>

<h3>Tem certeza que deseja excluir este restaurante?</h3>
<div>
    <h4>@Html.DisplayFor(model => model.Nome)</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Nome do Restaurante
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Apagar" class="btn btn-default" /> |
            @Html.ActionLink("Voltar", "Index")
        </div>
    }
</div>
