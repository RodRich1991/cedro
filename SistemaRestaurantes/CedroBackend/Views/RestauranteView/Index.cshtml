@model IEnumerable<CedroBackend.Models.Restaurante>

@{
    ViewBag.Title = "Restaurantes";
}

<h2>Restaurantes</h2>

<p>
    @Html.ActionLink("Cadastrar novo Restaurante", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.RestauranteId }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.RestauranteId }) |
            @Html.ActionLink("Apagar", "Delete", new { id=item.RestauranteId })
        </td>
    </tr>
}

</table>
