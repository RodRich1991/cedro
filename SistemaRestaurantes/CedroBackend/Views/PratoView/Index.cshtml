@model IEnumerable<CedroBackend.Models.Prato>

@{
    ViewBag.Title = "Pratos";
}

<h2>Pratos</h2>

<p>
    @Html.ActionLink("Criar novo Prato", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Nome do Prato
        </th>
        <th>
            Restaurante associado
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Restaurante.Nome)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.PratoId }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.PratoId }) |
            @Html.ActionLink("Apagar", "Delete", new { id=item.PratoId })
        </td>
    </tr>
}

</table>
